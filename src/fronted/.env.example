# ScamSafe Frontend Environment Variables
# Copy this file to .env.local and update with your values

# Application Environment
NODE_ENV=development
PORT=3000

# API Configuration
API_BASE_URL=http://localhost:3000
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Feature Flags
FEATURE_REAL_TIME_UPDATES=true
FEATURE_FILTER_PERSISTENCE=true
FEATURE_FONT_SIZE_MEMORY=true
FEATURE_ANALYTICS=false
FEATURE_NOTIFICATIONS=true
FEATURE_PWA=false

# Analytics Configuration (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_TRACKING_ID=
GOOGLE_ANALYTICS_ID=

# External Services
CDN_BASE_URL=https://cdnjs.cloudflare.com
FONT_AWESOME_KIT_ID=

# Security Settings
CSP_ENABLED=true
HSTS_ENABLED=true
SECURE_COOKIES=true

# Performance Settings
ENABLE_SERVICE_WORKER=false
CACHE_STATIC_ASSETS=true
PRELOAD_CRITICAL_RESOURCES=true

# Development Settings (Development Only)
DEV_SERVER_HOST=0.0.0.0
DEV_SERVER_PORT=3000
DEV_MOCK_DATA=true
DEV_DEBUG_MODE=true
DEV_HOT_RELOAD=true

# Build Configuration
BUILD_TARGET=es2020
BUILD_MINIFY=true
BUILD_SOURCE_MAPS=true
BUILD_ANALYZE_BUNDLE=false

# Deployment Settings
DEPLOY_TARGET=static
DEPLOY_BASE_PATH=/
DEPLOY_ENVIRONMENT=development

# Monitoring and Logging
LOG_LEVEL=info
ERROR_REPORTING_ENABLED=false
PERFORMANCE_MONITORING=false

# Accessibility Settings
A11Y_TESTING=true
SCREEN_READER_TESTING=false
KEYBOARD_NAVIGATION_TESTING=true

# Internationalization (Future)
I18N_ENABLED=false
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en

# PWA Settings (Future)
PWA_NAME=ScamSafe
PWA_SHORT_NAME=ScamSafe
PWA_DESCRIPTION=Cybersecurity Fraud Protection Platform
PWA_THEME_COLOR=#1e40af
PWA_BACKGROUND_COLOR=#0f172a

# Social Media & SEO
SITE_NAME=ScamSafe
SITE_DESCRIPTION=Professional cybersecurity fraud protection platform
SITE_URL=https://scamsafe.org
SITE_AUTHOR=ScamSafe Team
TWITTER_HANDLE=@scamsafe
FACEBOOK_APP_ID=

# Contact Information
CONTACT_EMAIL=team@scamsafe.org
SUPPORT_EMAIL=support@scamsafe.org
PRIVACY_POLICY_URL=https://scamsafe.org/privacy
TERMS_OF_SERVICE_URL=https://scamsafe.org/terms

# Legal Information
COPYRIGHT_HOLDER=ScamSafe Team
LICENSE=MIT
PRIVACY_COMPLIANT=true
GDPR_COMPLIANT=true
CCPA_COMPLIANT=true