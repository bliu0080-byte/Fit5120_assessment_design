{
  "name": "scamsafe-frontend",
  "version": "1.0.0",
  "description": "ScamSafe - Cybersecurity Fraud Protection Platform Frontend",
  "main": "home.html",
  "scripts": {
    "dev": "live-server --port=3000 --host=0.0.0.0 --cors",
    "build": "npm run build:css && npm run build:js && npm run build:assets",
    "build:css": "postcss css/*.css --dir dist/css --map",
    "build:js": "terser js/**/*.js --compress --mangle --output dist/js/app.min.js --source-map",
    "build:assets": "cp -r assets/ dist/assets/ && cp home.html dist/",
    "preview": "live-server dist --port=3001 --host=0.0.0.0",
    "clean": "rm -rf dist/",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,css,html,md}\"",
    "validate": "html-validate home.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "analyze": "webpack-bundle-analyzer dist/js/app.min.js",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "accessibility": "pa11y http://localhost:3000"
  },
  "keywords": [
    "scam-protection",
    "cybersecurity",
    "fraud-detection",
    "threat-intelligence",
    "security-awareness",
    "phishing-protection"
  ],
  "author": "ScamSafe Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/scamsafe/frontend.git"
  },
  "bugs": {
    "url": "https://github.com/scamsafe/frontend/issues"
  },
  "homepage": "https://scamsafe.org",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "html-validate": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lighthouse": "^10.4.0",
    "live-server": "^1.2.2",
    "pa11y": "^7.0.0",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.8",
    "terser": "^5.18.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.html": [
      "html-validate",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error",
      "eqeqeq": "error"
    },
    "globals": {
      "CONFIG": "readonly",
      "Utils": "readonly",
      "FontController": "readonly",
      "FilterController": "readonly",
      "AlertManager": "readonly",
      "ScamSafeApp": "readonly"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "autoprefixer": {},
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
